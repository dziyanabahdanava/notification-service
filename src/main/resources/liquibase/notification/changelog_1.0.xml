<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet author="Dziyana Bahdanava" id="6">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA IF NOT EXISTS notifications
        </sql>
    </changeSet>
    <changeSet author="Dziyana Bahdanava" id="7">
        <createTable tableName="notifications" schemaName="notifications">
            <column name ="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>